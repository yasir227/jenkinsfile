pipeline {
  agent {
    kubernetes {
    yaml '''
        apiVersion: v1
        kind: Pod
        spec:
          containers:
          - name: upkubectl
            image: alpine:latest
            command:
            - cat
            tty: true
        '''
    }
  }
  environment { 
        master_login = credentials('master_login')
  }
  stages {
    stage('Pre Test Docker') {
      steps {
        container('upkubectl') {
          sh 'whoami'
          sh 'uname -a'
          sh 'pwd'
        }
      }
    }
    stage('Checking utilities'){
        steps{
            container('upkubectl'){
                sh 'apk add --update --no-cache \
                    ca-certificates \
                    make \
                    bash \
                    curl \
                    unzip \
                    zip \
                    git \
                    python3 \
                    python3-dev \
                    py-pip \
                    build-base \
                    openssh-client \
                    stunnel \
                    tzdata \
                    coreutils'   
            }
        }
    }
    stage('Installing kubectl'){
        steps{
            container('upkubectl'){
                sh 'curl -LO "https://dl.k8s.io/release/$(curl -L -s https://dl.k8s.io/release/stable.txt)/bin/linux/amd64/kubectl"'
                sh  'sudo install -o root -g root -m 0755 kubectl /usr/local/bin/kubectl'
                sh 'kubectl version --client'
            }
        }
    }
    stage('SSHPASS') {
      steps {
        container('upkubectl') {
          sh 'apk update'
          sh 'apk search -v -d sshpass'
          sh 'apk add sshpass'
        }
      }
    }
    stage('master login'){
        steps{
            container('upkubectl'){
                sh 'mkdir ~/.kube'
                sh 'pwd'
                sh 'sshpass -p $master_login_PSW scp -o StrictHostKeyChecking=no $master_login_USR@52.31.215.41:~/.kube/config ~/.kube/'
                sh 'ls ~/.kube'
            }
        }
    }
    stage('Export config file'){
        steps{
            container('upkubectl'){
                sh 'ls ~/.kube'
                sh 'export KUBECONFIG=~/.kube/config'
            }
        }
    }
    stage('for checking'){
        steps{
            container('upkubectl'){
                sh 'kubectl get nodes'
                sh 'kubectl get all -n test'
                sh 'kubectl get ns'
                sh 'kubectl get pods -n test'
            }
        }
    }
  }
}