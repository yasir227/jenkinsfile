pipeline {
  agent {
    kubernetes {
    yaml '''
        apiVersion: v1
        kind: Pod
        spec:
          containers:
          - name: upkubectl
            image: alpine:latest
            command:
            - cat
            tty: true
        '''
    }
  }
  stages {
    stage('Pre Test Docker') {
      steps {
        container('upkubectl') {
          sh 'whoami'
          sh 'uname -a'
          sh 'pwd'
        }
      }
    }
    stage('Checking utilities'){
        steps{
            container('upkubectl'){
                sh 'apk add --update --no-cache \
                    ca-certificates \
                    make \
                    bash \
                    curl \
                    unzip \
                    zip \
                    git \
                    python3 \
                    python3-dev \
                    py-pip \
                    build-base \
                    openssh-client \
                    stunnel \
                    tzdata \
                    coreutils'   
            }
        }
    }
    stage('Installing kubectl'){
        steps{
            container('upkubectl'){
                sh 'curl \
                    -L https://storage.googleapis.com/kubernetes-release/release/${KUBE_VERSION}/bin/linux/amd64/kubectl \
                    -o /usr/local/bin/kubectl && \
                    chmod +x /usr/local/bin/kubectl'
            }
        }
    }
  }
}